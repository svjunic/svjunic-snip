# class(クロージャ。Singleton向け)
snippet class
  ${1:ClassName} = 
    ${2:MemberName}: ${3:VariableData}

  ${1:ClassName}.create = ->
    DefaultMember = this
    app = ${5:MemberName}: @${6:VariableData}
    app.initialize = ->
      ${7:script}
      return
  
    return app

# classs(prototype。ちゃんと作るとき向け）
snippet classs
  ${1:ClassName} = 
    ${2:MemberName}: ${3:VariableData}

  ${1:ClassName}.create = ->

    DefaultMember = this

    app:: =
      ${5:MemberName} : DefaultMember.${6:VariableData}

    app.initialize = ->
      ${7:script}
      return

  Create = ->
    createApp = ->
    createApp:: = app::
    return new createApp()
  
  # exports 
  AppPackage = {}
  AppPackage.superClass = app
  AppPackage.create = Create


