#ajax
snippet ajaxo
  ajaxOptions = 
      url        : '${1:mydomain.com/url}',
      type       : '${2:POST}',
      dataType   : '${3:xml/html/script/json}',
      data       : $.param( $('${4:Element or Expression}') ),
      beforeSend : ( xhr ) ->
        xhr.setRequestHeader("If-Modified-Since", "Thu, 01 Jun 1970 00:00:00 GMT")
        return 
      jsonpCallback : '${3:callback function name}'

snippet $ajax
  jqxhr = $.ajax ajaxOptions
          .done   ${2:function}
          .fail   ${3:function}
          .always ${4:function}

snippet $ajaxhtml
  ajaxOptions =
      url      : '${1:mydomain.com/url}'
      type     : 'GET'
      dataType : 'html'
      data     : $.param( $('${2:Element or Expression}') )
      beforeSend :( xhr ) ->
        xhr.setRequestHeader "If-Modified-Since", "Thu, 01 Jun 1970 00:00:00 GMT"
      jsonpCallback : '${3:callback function name}'
  
  jqxhr = $.ajax( ajaxOptions )
    .done ( responseText, textStatus, jqXHR )->
      html = jQuery document.createElement 'div'
             .append jQuery.parseHTML responseText
             .find ${4:selecter}
    .fail   ${5:function}
    .always ${6:function}

snippet $ajaxdfd
  $dfd = $.Deferred()

  ajaxOptions =
    url           : '${1:mydomain.com/url}'
    type          : '${2:POST}'
    dataType      : '${3:xml/html/script/json}'
    data          : $.param( $('${4:Element or Expression}') )
    beforeSend    : ( xhr ) ->
      xhr.setRequestHeader "If-Modified-Since", "Thu, 01 Jun 1970 00:00:00 GMT"
    jsonpCallback : '${3:callback function name}'

  $.ajax ajaxOptions
    .done ( res, status, xhr ) ->
      $dfd.resolve()
    .fail () ->
      $dfd.reject()
  
  return $dfd.promise()

